<!DOCTYPE html>
<html>
 <head>
  <title>
   <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
 </head>
 <body>
  <%- include('./layout.ejs') %>
   <h1>
    <%= title %>
   </h1>
   <ul>
    <% if (items_list.length > 0) { %>
     <% items_list.forEach(item => { %>
      <li>
       <a href=<%- item.url %>><%= item.name %> | $<%= item.price %></a>
      </li>
     <% }); %>
    <% } else { %>
     <li>
      <p>There are no items.</p>
     </li>
    <% } %>
   </ul>
 </body>
</html>